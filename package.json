{
  "name": "bookforge",
  "version": "1.0.4",
  "description": "一个用于解析 gitbook markdown 文件并生成 HTML 网站或 PDF 文件的工具",
  "main": "dist/index.js",
  "type": "commonjs",
  "types": "dist/index.d.ts",
  "bin": {
    "bookforge": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "cpx \"src/generators/{tpls,static}/**/*\" dist/generators",
    "dev": "tsc --watch",
    "start": "tsx src/cli.ts",
    "start:html": "tsx src/cli.ts html --input ./docs --output ./examples/html",
    "start:pdf": "tsx src/cli.ts pdf --input ./docs --output ./examples/pdf",
    "start:all": "tsx src/cli.ts all --input ./docs --output ./examples",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest --ci --coverage --watchAll=false",
    "lint": "biome check .",
    "lint:fix": "biome check . --write --max-diagnostics=200"
  },
  "keywords": [
    "gitbook",
    "markdown",
    "parser",
    "html",
    "pdf",
    "documentation"
  ],
  "author": "yunnysunny@gmail.com",
  "homepage": "https://github.com/yunnysunny/bookforge",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yunnysunny/bookforge.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "provenance": true
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "ejs": "^3.1.10",
    "marked": "^17.0.0",
    "puppeteer": "^24.30.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@types/ejs": "^3.1.5",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.12",
    "cpx": "^1.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.12"
  }
}
