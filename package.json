{
  "name": "gitbook-parser",
  "version": "1.0.0",
  "description": "一个用于解析 gitbook markdown 文件并生成 HTML 网站或 PDF 文件的工具",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "keywords": [
    "gitbook",
    "markdown",
    "parser",
    "html",
    "pdf",
    "documentation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "marked": "^12.0.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.0",
    "@types/marked": "^6.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "puppeteer": "^24.25.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "bin": {
    "gitbook-parser": "./dist/cli.js"
  }
}
